# SpaceClip Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Secret key for session signing (required)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# PostgreSQL database URL (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/spaceclip

# Frontend URL for CORS and redirects (required)
# Format: http://localhost:3000 (development) or https://spaceclip.io (production)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Application environment: development, staging, or production
# Default: development
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Redis URL for rate limiting and caching (optional)
# Format: redis://localhost:6379/0
# Leave empty if not using Redis
REDIS_URL=

# Public API URL for generating absolute URLs (optional)
# If not set, will be derived from FRONTEND_URL or HOST/PORT
# Example: https://api.spaceclip.io
PUBLIC_API_URL=

# Allowed CORS origins (comma-separated string)
# Required in production/staging, optional in development (defaults to FRONTEND_URL)
# Example: https://spaceclip.io,https://www.spaceclip.io
ALLOWED_ORIGINS=

# =============================================================================
# SERVER CONFIGURATION (Optional - defaults shown)
# =============================================================================

# Server host to bind to
# Default: 0.0.0.0
HOST=0.0.0.0

# Server port
# Default: 8000
PORT=8000

# =============================================================================
# OLLAMA CONFIGURATION (Optional - defaults shown)
# =============================================================================

# Ollama API host URL
# Default: http://localhost:11434
OLLAMA_HOST=http://ollama:11434

# Ollama model name
# Default: llama3.2
OLLAMA_MODEL=llama3.2

# =============================================================================
# WHISPER CONFIGURATION (Optional - defaults shown)
# =============================================================================

# Whisper model name
# Default: base
WHISPER_MODEL=base

# =============================================================================
# STORAGE CONFIGURATION (Optional - defaults shown)
# =============================================================================

# Directory for uploaded files
# Default: ./uploads
UPLOAD_DIR=/app/uploads

# Directory for generated output files
# Default: ./outputs
OUTPUT_DIR=/app/outputs
